<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Face Analysis Report - {{ image_name }}</title>
  <style>
    body { font-family: Arial, sans-serif; background-color: #0b0b0d; color: #e8e8e8; margin: 0; padding: 24px; }
    h1, h2 { color: #f1f1f1; }
    .section { margin-bottom: 32px; }
    table { border-collapse: collapse; width: 100%; background: #141418; }
    th, td { border: 1px solid #2a2a30; padding: 8px 12px; text-align: left; }
    th { background: #1f1f25; }
    .warn { color: #ffc107; }
    .flag { color: #ff6b6b; font-weight: 600; }
    .ok { color: #4caf50; }
    .quality-warning { color: #ffc107; }
    .images { display: flex; flex-wrap: wrap; gap: 16px; }
    .images figure { margin: 0; }
    .images img { max-width: 480px; border: 1px solid #2a2a30; }
    .badge { display: inline-block; padding: 2px 8px; border-radius: 4px; font-size: 12px; }
    .badge-warn { background: rgba(255, 193, 7, 0.2); color: #ffc107; }
    .badge-flag { background: rgba(255, 107, 107, 0.2); color: #ff6b6b; }
    .meta { font-size: 14px; color: #9a9aa0; }
    a { color: #8ab4f8; }
  </style>
</head>
<body>
  <h1>Face Analysis Report</h1>
  <div class="meta">
    <div><strong>Image:</strong> {{ image_name }}</div>
    <div><strong>Status:</strong> <span class="{{ quality.status }}">{{ quality.status|default('n/a') }}</span></div>
    {% if quality.warnings %}
      <div><strong>Quality Warnings:</strong>
        <ul>
          {% for warning in quality.warnings %}
            <li class="quality-warning">{{ warning }}</li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
  </div>

  <div class="section">
    <h2>Findings</h2>
    {% if findings %}
      <ul>
        {% for finding in findings %}
          <li class="badge badge-{{ finding.severity }}">
            {{ finding.name }} &mdash; {{ finding.message }} ({{ finding.comparison }} {{ finding.threshold }})
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <p class="ok">No findings triggered.</p>
    {% endif %}
  </div>

  <div class="section">
    <h2>Measurements</h2>
    <table>
      <thead>
        <tr>
          <th>Metric</th>
          <th>Value</th>
          <th>Units</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        {% for metric in metrics %}
          <tr>
            <td>{{ metric.name }}</td>
            <td>{{ metric.value|round(3) }}</td>
            <td>{{ metric.units }}</td>
            <td>{{ metric.description }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  <div class="section">
    <h2>Visualizations</h2>
    <div class="images">
      {% if landmark_overlay %}
        <figure>
          <img src="{{ landmark_overlay }}" alt="Detection overlay">
          <figcaption>Detection overlay</figcaption>
        </figure>
      {% endif %}
      {% for face_overlay in face_overlays %}
        <figure>
          <img src="{{ face_overlay }}" alt="Landmarks">
          <figcaption>Landmarks overlay</figcaption>
        </figure>
      {% endfor %}
      {% if metrics_overlay %}
        <figure>
          <img src="{{ metrics_overlay }}" alt="Measurement overlay">
          <figcaption>Measurement overlay</figcaption>
        </figure>
      {% endif %}
    </div>
  </div>
</body>
</html>
